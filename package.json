{
  "name": "school-system",
  "productName": "school-system",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "prepare": "husky install",
    "db:create": "sequelize-cli db:create",
    "db:migrate:generate": "sequelize-cli migration:generate --name",
    "db:migrate": "sequelize-cli db:migrate",
    "db:seed:generate": "sequelize-cli seed:generate --name",
    "db:seed": "sequelize-cli db:seed:all",
    "db:clean": "sequelize-cli db:drop"
  },
  "keywords": [],
  "author": "zeyad",
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "school_system"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "bootstrap": "^5.1.0",
    "bootstrap-icons": "^1.5.0",
    "datatables.net": "^1.11.2",
    "datatables.net-dt": "^1.11.2",
    "dotenv": "^10.0.0",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-squirrel-startup": "^1.0.0",
    "jquery": "^3.6.0",
    "pg": "^8.7.1",
    "sequelize": "^6.6.5"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.59",
    "@electron-forge/maker-deb": "^6.0.0-beta.59",
    "@electron-forge/maker-rpm": "^6.0.0-beta.59",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.59",
    "@electron-forge/maker-zip": "^6.0.0-beta.59",
    "electron": "13.1.7",
    "eslint": "^7.32.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.1",
    "prettier": "^2.3.2",
    "sequelize-cli": "^6.2.0"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{html,css,md}": "prettier --write"
  }
}
