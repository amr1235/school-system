{
  "name": "school-system",
  "productName": "school-system",
  "version": "1.0.6",
  "description": "My Electron application description",
  "repository": {
    "url": "https://github.com/zeyad-kay/school-system"
  },
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish --dry-run && electron-forge publish --from-dry-run",
    "prepare": "husky install",
    "db:create": "sequelize-cli db:create",
    "db:migrate:generate": "sequelize-cli migration:generate --name",
    "db:migrate": "sequelize-cli db:migrate",
    "db:seed:generate": "sequelize-cli seed:generate --name",
    "db:seed": "sequelize-cli db:seed:all",
    "db:clean": "sequelize-cli db:migrate:undo:all",
    "db:drop": "sequelize-cli db:drop"
  },
  "keywords": [],
  "author": "zeyad-kay",
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "ignore": [
          "src/db/seeders/*",
          "src/db/migrations/*"
        ],
        "asar": true
      },
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "platforms": [
            "win32"
          ],
          "config": {
            "repository": {
              "owner": "zeyad-kay",
              "name": "school-system"
            },
            "prerelease": false
          }
        }
      ],
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "school-system"
          }
        }
      ]
    }
  },
  "dependencies": {
    "@popperjs/core": "^2.10.1",
    "bootstrap": "^5.1.0",
    "bootstrap-icons": "^1.5.0",
    "datatables.net": "^1.11.2",
    "datatables.net-dt": "^1.11.2",
    "dotenv": "^10.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "jquery": "^3.6.0",
    "jsreport": "^2.11.0",
    "pg": "^8.7.1",
    "sequelize": "^6.6.5"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.59",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.59",
    "@electron-forge/publisher-github": "^6.0.0-beta.61",
    "electron": "13.1.7",
    "eslint": "^7.32.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.1",
    "prettier": "^2.3.2",
    "sequelize-cli": "^6.2.0"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{html,css,md}": "prettier --write"
  }
}
